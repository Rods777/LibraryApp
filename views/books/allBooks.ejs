<h2>Search Book</h2>
<form action="/books" method="GET">
    <div>
        <label>Search Title</label>
        <input type="search" name="title" value="<%= search.title %>">
    </div>
    <div>
        <label>Publish After</label>
        <input type="date" name="publishAfter" 
            value="<%= search.publishAfter %>">
    </div>
    <div>
        <label>Publish Before</label>
        <input type="date" name="publishBefore" 
            value="<%= search.publishBefore %>">
    </div>
    
    <button type="submit">Search</button>
</form>
<div>
    <% books.forEach(book => { %>
        <a href="/books/<%= book.id %>"><img height="150" width="100" src="<%= book.coverImagePath %>"></a>
    <% }); %> 
</div>
